@model Mangateque.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Books" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input class="form-control" name="image" type="file" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
    
           
            
            @foreach (var chapter in Model.Chapters)
            {
                <div>
                    <dt class = "col-sm-2">
                        <label asp-for="@chapter.Path" class="control-label"> @chapter.Path</label>
                    </dt>
                   
                </div>
                
                
            }
  
   
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Chapters" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label">Numéro du chapitre</label>
                <input type="number" name="ChapterNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Nombre de page</label>
                <input type="number" name="NumberOfPage" class="form-control"/>
            </div>
            <div class="form-group">
                <input class="form-control" name="images" type="file" multiple/>
            </div>

            
            <input type="hidden" name="BookId" value="@Model.Id"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
